<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >
    
    
    <TextView
        android:id="@+id/node_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="end"
        />
    
    <TextView
        android:id="@+id/node_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/node_content"
        android:textSize="15sp"
        android:textColor="#A3A3A3"
        />
    
    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"        
        android:clickable="false"
        />

     <ImageView
         android:id="@+id/is_media"
         android:layout_width="15dp"
         android:layout_height="15dp"
         android:layout_alignBottom="@+id/node_date"
         android:layout_marginLeft="10dp"
         android:layout_toRightOf="@+id/node_date"
         android:background="@drawable/ic_mediaplayer"
         android:clickable="false"
       />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7ffff"
    android:fitsSystemWindows="true" >

    <Button
        android:id="@+id/classret_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_ret"
        />
    
    <TextView 
        android:id="@+id/classret_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/classret_button"
        android:text="文本备忘录"
        android:background="#6bd5e6"
        android:textColor="#ffffff"
       	android:textSize="25sp"
       	android:gravity="center_vertical|left"
        />
    
    <ListView 
        android:id="@+id/ctxt_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classret_title"
       	android:layout_marginLeft="20dp"
       	android:background="#f7ffff"
       	android:layout_marginRight="5dp"
       	android:layout_marginTop="10dp"
        />
	        
	<Button 
		android:id="@+id/cancel_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_cancel"
        android:visibility="invisible"/>
	
	<Button
	    android:id="@+id/deleteall_button"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="21dp"
	    android:layout_marginLeft="115dp"
	    android:drawableTop="@drawable/ic_delete"
        android:drawablePadding="3dp"
	    android:background="@android:color/transparent"
	    android:gravity="center|bottom"
	    android:text="删除"
	    android:textColor="#a3a3a3"
	    android:textSize="15sp"
	    android:visibility="invisible" />

	<Button
	    android:id="@+id/selectall_button"
	    android:layout_width="100dp"
	    android:layout_height="50dp"
	    android:layout_marginBottom="21dp"
	    android:layout_alignBaseline="@+id/deleteall_button"
	    android:layout_marginLeft="0dp"
	    android:layout_toRightOf="@+id/deleteall_button"
	    android:drawableTop="@drawable/ic_select"
        android:drawablePadding="2dp"
	    android:background="@android:color/transparent"
	    android:gravity="center|bottom"
	    android:text="全选"
	    android:textColor="#a3a3a3"
	    android:textSize="15sp"
	    android:visibility="invisible" />


</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_mine"
    tools:context="com.example.sdustcamp.MainActivity"
    android:fitsSystemWindows="true"
    android:background="#f0eef4" >
    
    <TextView 
        android:id="@+id/tv_titleMine"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="   我的"
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center|left"
        android:background="#0359a2"
        android:layout_alignParentTop="true"/>
	
    <TextView 
        android:id="@+id/tv_signIn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tv_titleMine"
        android:background="#0359a2"
        android:drawableLeft="@drawable/profile"
        android:drawableRight="@drawable/arrowright"
        android:gravity="center|left"
        android:text="   点击登陆"
        android:textColor="#fff"
        android:textSize="30sp"/>
    
    <Button
        android:id="@+id/btn_modifyKey"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fafafc"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/modifykey"
        android:text="   修改密码"
        android:textColor="#5e5e5e"
        android:gravity="center|left"
        android:layout_below="@id/tv_signIn"
        android:layout_marginTop="5dp"/>
    
    <Button
        android:id="@+id/btn_stuId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fafafc"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/bundling"
        android:text="   绑定学号"
        android:textColor="#5e5e5e"
        android:gravity="center|left"
        android:layout_below="@id/btn_modifyKey"
        android:layout_marginTop="8dp"/>
    
   
    <Button
        android:id="@+id/btn_stuQQ"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fafafc"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/stuqq"
        android:text="   绑定QQ"
        android:textColor="#5e5e5e"
        android:gravity="center|left"
        android:layout_below="@id/btn_stuId"/>
    
    <Button
        android:id="@+id/btn_stuWecha"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fafafc"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/stuwechat"
        android:text="   绑定微信"
        android:textColor="#5e5e5e"
        android:gravity="center|left"
        android:layout_below="@id/btn_stuQQ"/>
    
    <Button
        android:id="@+id/btn_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fafafc"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/setting"
        android:text="   设置"
        android:textColor="#5e5e5e"
        android:gravity="center|left"
        android:layout_below="@id/btn_stuWecha"
        android:layout_marginTop="8dp"/>
    
    <RelativeLayout
        android:id="@+id/ll_memuBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fafafc">
        
        <Button
            android:id="@+id/btn_index"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:text="首页"
            android:layout_centerHorizontal="true"
            android:textColor="#5e5e5e"
            android:textSize="15sp"
            android:gravity="center|bottom"
            android:drawableTop="@drawable/index"
            android:background="#fafafc"/>
        
        <Button 
            android:id="@+id/btn_service"
            android:layout_width="76dp"
            android:layout_height="45dp"
            android:layout_toLeftOf="@id/btn_index"
            android:text="服务"
            android:textSize="15sp"
            android:textColor="#5e5e5e"
            android:gravity="center|bottom"
            android:drawableTop="@drawable/service"
            android:background="#fafafc"/>
        
        <Button 
            android:id="@+id/btn_updatings"
            android:layout_width="76dp"
            android:layout_height="45dp"
            android:layout_toLeftOf="@id/btn_service"
            android:text="动态"
            android:textColor="#5e5e5e"
            android:textSize="15sp"
            android:gravity="center|bottom"
            android:drawableTop="@drawable/updatings"
            android:background="#fafafc"/>
        
        
        <Button
            android:id="@+id/btn_news"
            android:layout_width="76dp"
            android:layout_height="45dp"
            android:text="消息"
            android:layout_toRightOf="@id/btn_index"
            android:textColor="#5e5e5e"
            android:textSize="15sp"
            android:gravity="center|bottom"
            android:drawableTop="@drawable/news"
            android:background="#fafafc"/>
        
        <Button
            android:id="@+id/btn_mine"
            android:layout_width="76dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/btn_news"
            android:text="我的"
            android:textColor="#5e5e5e"
            android:textSize="17sp"
            android:textStyle="bold"
            android:gravity="center|bottom"
            android:drawableTop="@drawable/mine"
            android:background="#fafafc"/>
            
	</RelativeLayout>
    
</RelativeLayout>